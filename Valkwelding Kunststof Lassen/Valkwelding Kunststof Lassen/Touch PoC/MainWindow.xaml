<Window x:Class="ValkWelding.Welding.Touch_PoC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValkWelding.Welding.Touch_PoC"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Margin="10"
                Content="Run"
                Click="Button_Click"/>
        <Button Margin="10"
                Content="Trigger Detection"
                PreviewMouseDown="Detection_Trigger_Down" 
                PreviewMouseUp="Detection_Trigger_Up"
                Height="120"/>
    </StackPanel>
</Window>
