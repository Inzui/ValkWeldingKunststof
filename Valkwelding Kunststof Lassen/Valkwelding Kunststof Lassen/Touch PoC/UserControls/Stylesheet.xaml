<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Text-->
    <Style x:Key="HeaderText" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>
    <Style x:Key="SubText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="LightGray"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!--TextBox-->
    <Style x:Key="SettingsTextBox" TargetType="TextBox">
        <Setter Property="Margin" Value="25,5, 25, 0"/>
        <Setter Property="Background" Value="#FF313131"/>
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="Foreground" Value="LightGray"/>
    </Style>

    <!--Button-->
    <Style x:Key="ConnectButton" TargetType="Button">
        <Setter Property="Margin" Value="25,5, 25, 0"/>
        <Setter Property="Background" Value="#FF313131"/>
        <Setter Property="Foreground" Value="LightGray"/>
        <Setter Property="BorderBrush" Value="Gray"/>
    </Style>
</ResourceDictionary>